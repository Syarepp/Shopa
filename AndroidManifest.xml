<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/shoppa"
        android:label="@string/app_name"
        android:roundIcon="@drawable/shoppee"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shoppa"
        tools:targetApi="31">

        <!-- Main Launcher Activity (Uses fragments, so default theme is OK) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Shoppa">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other activities -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.Shoppa.NoActionBar" /> <!-- Use NoActionBar -->

        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.Shoppa.NoActionBar" /> <!-- Use NoActionBar -->

        <activity
            android:name=".WatchesActivity"
            android:exported="false"
            android:theme="@style/Theme.Shoppa.NoActionBar" /> <!-- Use NoActionBar -->

        <activity
            android:name=".CheckoutActivity"
            android:exported="false"
            android:theme="@style/Theme.Shoppa.NoActionBar" /> <!-- Use NoActionBar -->

        <!-- Splash and Login (if you add them back) -->
        <activity
            android:name=".SplashActivity"
            android:exported="false"
            android:theme="@style/Theme.Shoppa.Splash" />

        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Shoppa.NoActionBar" />

    </application>

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="33" />

</manifest>